{
  "extends": ["prettier", "next/core-web-vitals", "next"],
  "rules": {
    "import/no-default-export": "error",
    "no-unused-vars": "warn"
  },
  "overrides": [
    {
      "files": [
        "layout.tsx",
        "page.tsx",
        "error.tsx",
        "loading.tsx",
        "not-found.tsx",
        "*.config.ts",
        "./app/_locales/langs/*"
      ],
      "rules": {
        "import/no-default-export": "off",
        "curly": ["error", "all"]
      }
    }
  ]
}
