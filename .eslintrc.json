{
  "extends": ["next/core-web-vitals", "next", "prettier"],
  "rules": {
    "import/order": [
      "warn",
      {
        "groups": [
          ["builtin", "external", "internal"],
          ["parent", "sibling", "index"]
        ],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": ".*\\.css$",
            "group": "sibling",
            "position": "after"
          }
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
