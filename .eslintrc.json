{
  "extends": ["prettier", "next/core-web-vitals", "next"],
  "rules": {
    "import/no-default-export": "error",
    "curly": ["error", "all"],
    "no-console": ["warn"]
  },
  "overrides": [
    {
      "files": [
        "layout.tsx",
        "page.tsx",
        "error.tsx",
        "loading.tsx",
        "not-found.tsx",
        "*.config.ts",
        "./app/_locales/langs/*",
        "./src/popup.tsx",
        "./tailwind.ext.config.ts"
      ],
      "rules": {
        "import/no-default-export": "off"
      }
    }
  ]
}
